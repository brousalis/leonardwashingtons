<body>

  <div class="container">
    <div id="wrapper">
      <header>
        <h1 class="logo"><a href="#">TLW</a></h1>
        <nav>
          <li><a class="home" href="#">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Shows</a></li>
          <li><a href="#">Music</a></li>
          <li><a href="#">Contact</a></li>
        </nav>
      </header>
      <div id="main">
        <div id="top">
          <div id="slider">
            <%= image_tag("3.jpg") %>
            <%= link_to image_tag("3.jpg"), "#" %>
            <%= image_tag("3.jpg") %>
          </div>
          <div id="social">
            <nav>
              <li class="facebook"><a href="#">soundcloud</a></li>
              <li class="twitter"><a href="#">twitter</a></li>
              <li class="soundcloud"><a href="#">soundcloud</a></li>
              <li class="lastfm"><a href="#">lastfm</a></li>
              <li class="email"><a href="#">email</a></li>
            </nav>
          </div>
          <div class="listen">
            <a class="ribbon">listen to our new cd</a>
          </div>
        </div>
        <div id="bar"></div>
        <div id="content">


        </div>
      </div>
    </div>
  </div>

