= form_for @post, :class => "form-horizontal" do |f|
  %fieldset
    .control-group
      .controls
        = f.text_field :name, :class => "input-xlarge", :placeholder => "name of post"
    .control-group
      .controls
        = f.text_area :content, :class => "input-xlarge", :placeholder => "body"
    .form-actions
      %button.btn.btn-large.btn-primary{:id => "submit", :type => "submit"} Submit post
