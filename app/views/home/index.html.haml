#wrapper
  %header
    %h1.logo
      %a{:href => "#"} TLW
    %nav
      %li
        %a.home{:href => "/"}Home
      %li
        %a.about{:href => "#"} About
      %li
        %a.shows_table{:href => "#"} Shows
      %li
        %a.music{:href => "http://itunes.apple.com/us/album/introducing../id427752485"} Music
      %li
        %a.contact{:href => "mailto:theleonardwashingtons@gmail.com"} Contact
  #main
    #top
      #slider
        - Slide.find(:all, :order => 'created_at DESC').each do |slide|
          %img{:src => "#{slide.picture.url(:large)}"}
      .clearfix
      #ajax
        %span.close
          %a{:href => "#"} X
        #ajax_post
        = render :partial => '/home/partials/about'
        = render :partial => '/home/partials/shows_table'
        = render :template => '/contact/new'
    #content
      .columns
        = render :partial => "/home/partials/news"
        = render :partial => "/home/partials/album"
        = render :partial => "/home/partials/music"
      .clearfix
      = render :partial => "/home/partials/shows"
  #footer
    %p
      All Rights Reserved. Copyright 2012
      %span The Leonard Washingtons
